<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="680.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unical.mat.project_pmasp.controller.MainMenuController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem fx:id="openLogItem" mnemonicParsing="false" onAction="#openLogItemPressed" text="Open Log File" />
            <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="openModelItem" mnemonicParsing="false" onAction="#openModelItemPressed" text="Open Model" />
            <MenuItem fx:id="saveModelItem" mnemonicParsing="false" onAction="#saveModelItemPressed" text="Save Model" />
                  <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#quitItemPressed" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem fx:id="addActivityItem" mnemonicParsing="false" onAction="#addActivityItemPressed" text="Add Activity" />
            <MenuItem fx:id="removeActivityItem" mnemonicParsing="false" onAction="#removeActivityItemPressed" text="Remove Activity" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="addRemoveUnaryItem" mnemonicParsing="false" onAction="#addRemoveUnaryItemPressed" text="Add/Remove Unary Constraints" />
            <MenuItem fx:id="addRemoveBinaryItem" mnemonicParsing="false" onAction="#addRemoveBinaryItemPressed" text="Add/Remove Binary Constraint" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="changeEdgeLayoutItem" mnemonicParsing="false" onAction="#changeEdgeLayoutItemPressed" text="Change Edge Layout" />
                  <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="clearModelItem" mnemonicParsing="false" onAction="#clearModelItemPressed" text="Clear Model Graph" />
            <MenuItem mnemonicParsing="false" onAction="#clearAllItemPressed" text="Clear All" />
          </items>
        </Menu>
            <Menu mnemonicParsing="false" text="View">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showLogItemPressed" text="Show Current Log" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#solveItemPressed" text="Solve" />
               </items>
            </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#aboutItemPressed" text="About PMASP" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <ButtonBar prefHeight="80.0" prefWidth="200.0">
        <buttons>
            <GridPane prefHeight="40.0" prefWidth="1319.0">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="addActivityButton" mnemonicParsing="false" onMousePressed="#addActivityButtonPressed" prefHeight="26.0" prefWidth="190.0" text="Add Activity" GridPane.rowIndex="1" />
                  <Button fx:id="removeActivityButton" mnemonicParsing="false" onMousePressed="#removeActivityButtonPressed" prefHeight="26.0" prefWidth="190.0" text="Remove Activity" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="unaryConstraintButton" mnemonicParsing="false" onMousePressed="#addRemoveUnaryButtonPressed" prefHeight="26.0" prefWidth="190.0" text="Add/Remove Unary Constraints" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <Button fx:id="binaryConstraintButton" mnemonicParsing="false" onMousePressed="#addRemoveBinaryButtonPressed" prefHeight="26.0" prefWidth="190.0" text="Add/Remove Binary Constraints" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  <Button fx:id="edgeLayoutButton" mnemonicParsing="false" onMousePressed="#changeEdgeLayoutButtonPressed" prefHeight="26.0" prefWidth="190.0" text="Change Edge Layout" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                  <Button mnemonicParsing="false" onMousePressed="#openLogButtonPressed" prefHeight="26.0" prefWidth="190.0" text="Open Log File" />
                  <Button mnemonicParsing="false" onMousePressed="#showLogButtonPressed" prefHeight="26.0" prefWidth="190.0" text="Show Current Log" GridPane.columnIndex="1" />
                  <Button mnemonicParsing="false" onMousePressed="#solveButtonPressed" prefHeight="26.0" prefWidth="190.0" text="SOLVE" GridPane.columnIndex="2" />
                  <Button fx:id="openModelButton" mnemonicParsing="false" onMousePressed="#openModelButtonPressed" prefHeight="26.0" prefWidth="190.0" text="Open Model" GridPane.columnIndex="3" />
                  <Button fx:id="saveModelButton" mnemonicParsing="false" onMousePressed="#saveModelButtonPressed" prefHeight="26.0" prefWidth="190.0" text="Save Model" GridPane.columnIndex="4" />
               </children>
            </GridPane>
        </buttons>
      </ButtonBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="550.0" prefWidth="1024.0" VBox.vgrow="ALWAYS">
         <children>
            <ScrollPane prefHeight="574.0" prefWidth="1024.0">
               <content>
                  <BorderPane fx:id="sBorderPane" prefHeight="2200.0" prefWidth="3000.0" />
               </content></ScrollPane>
         </children>
    </AnchorPane>
  </children>
</VBox>
